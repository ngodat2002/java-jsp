<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <filter>
        <filter-name>HelloFilter</filter-name>
        <filter-class>com.register.registeracc.controller.filter.AdminFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>HelloFilter</filter-name>
        <url-pattern>/admin</url-pattern>
        <url-pattern>/admin/*</url-pattern>
        <url-pattern>/admin/*/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>UserFilter</filter-name>
        <filter-class>com.register.registeracc.controller.filter.UserFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>UserFilter</filter-name>
        <url-pattern>/user</url-pattern>
        <url-pattern>/user/*</url-pattern>
        <url-pattern>/user/*/*</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>AdminAuthServlet</servlet-name>
        <servlet-class>com.register.registeracc.AdminAuthServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminAuthServlet</servlet-name>
        <url-pattern>/admin/auth/home</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>HomeUserServlet</servlet-name>
        <servlet-class>com.register.registeracc.HomeUserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HomeUserServlet</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>com.register.registeracc.controller.account.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.register.registeracc.controller.account.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>LogOutServlet</servlet-name>
        <servlet-class>com.register.registeracc.controller.account.LogOutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogOutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

</web-app>