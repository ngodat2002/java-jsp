<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <filter>
        <filter-name>HelloFilter</filter-name>
        <filter-class>com.maiyeuem.tdsports.controller.filter.AdminFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>HelloFilter</filter-name>
        <url-pattern>/admin</url-pattern>
        <url-pattern>/admin/*</url-pattern>
        <url-pattern>/admin/*/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>UserFilter</filter-name>
        <filter-class>com.maiyeuem.tdsports.controller.filter.UserFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>UserFilter</filter-name>
        <url-pattern>/user</url-pattern>
        <url-pattern>/user/*</url-pattern>
        <url-pattern>/user/*/*</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>AdminHomeServlet</servlet-name>
        <servlet-class>com.maiyeuem.tdsports.controller.AdminHomeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminHomeServlet</servlet-name>
        <url-pattern>/admin/auth/home</url-pattern>
    </servlet-mapping>
    <!-- Start Product management -->
    <servlet>
        <servlet-name>ListProductServlet</servlet-name>
        <servlet-class>com.maiyeuem.tdsports.controller.product.ListProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListProductServlet</servlet-name>
        <url-pattern>/admin/products/list</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CreateProductServlet</servlet-name>
        <servlet-class>com.maiyeuem.tdsports.controller.product.CreateProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateProductServlet</servlet-name>
        <url-pattern>/admin/products/create</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>EditProductServlet</servlet-name>
        <servlet-class>com.maiyeuem.tdsports.controller.product.EditProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditProductServlet</servlet-name>
        <url-pattern>/admin/products/edit</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DetailProductServlet</servlet-name>
        <servlet-class>com.maiyeuem.tdsports.controller.product.DetailProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DetailProductServlet</servlet-name>
        <url-pattern>/admin/products/detail</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DeleteProductServlet</servlet-name>
        <servlet-class>com.maiyeuem.tdsports.controller.product.DeleteProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteProductServlet</servlet-name>
        <url-pattern>/admin/products/delete</url-pattern>
    </servlet-mapping>
    <!-- End Product management -->

    <!-- Start Category management -->
    <servlet>
        <servlet-name>CreateCategoryServlet</servlet-name>
        <servlet-class>com.maiyeuem.tdsports.controller.categories.CreateCategoryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateCategoryServlet</servlet-name>
        <url-pattern>/admin/categories/create</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ListCategoryServlet</servlet-name>
        <servlet-class>com.maiyeuem.tdsports.controller.categories.ListCategoryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListCategoryServlet</servlet-name>
        <url-pattern>/admin/categories/list</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>EditCategoryServlet</servlet-name>
        <servlet-class>com.maiyeuem.tdsports.controller.categories.EditCategoryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditCategoryServlet</servlet-name>
        <url-pattern>/admin/categories/edit</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DetailCategoryServlet</servlet-name>
        <servlet-class>com.maiyeuem.tdsports.controller.categories.DetailCategoryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DetailCategoryServlet</servlet-name>
        <url-pattern>/admin/categories/detail</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DeleteCategoryServlet</servlet-name>
        <servlet-class>com.maiyeuem.tdsports.controller.categories.DeleteCategoryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteCategoryServlet</servlet-name>
        <url-pattern>/admin/categories/delete</url-pattern>
    </servlet-mapping>
    <!-- End Category management -->

    <!-- User product -->
    <servlet>
        <servlet-name>ListProductUserServlet</servlet-name>
        <servlet-class>com.maiyeuem.tdsports.controller.product.ListProductUserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListProductUserServlet</servlet-name>
        <url-pattern>/products</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ShowCartServlet</servlet-name>
        <servlet-class>com.maiyeuem.tdsports.controller.product.ShowCartServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ShowCartServlet</servlet-name>
        <url-pattern>/cart/show</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AddCartServlet</servlet-name>
        <servlet-class>com.maiyeuem.tdsports.controller.product.AddCartServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddCartServlet</servlet-name>
        <url-pattern>/cart/add</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DeleteCartServlet</servlet-name>
        <servlet-class>com.maiyeuem.tdsports.controller.product.DeleteCartServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteCartServlet</servlet-name>
        <url-pattern>/cart/show/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DetailProductUserServlet</servlet-name>
        <servlet-class>com.maiyeuem.tdsports.controller.product.DetailProductUserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DetailProductUserServlet</servlet-name>
        <url-pattern>/product/detail</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ContactServlet</servlet-name>
        <servlet-class>com.maiyeuem.tdsports.controller.ContactServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ContactServlet</servlet-name>
        <url-pattern>/contact</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CategoryServlet</servlet-name>
        <servlet-class>com.maiyeuem.tdsports.controller.categories.CategoryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CategoryServlet</servlet-name>
        <url-pattern>/products/category</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>SearchServlet</servlet-name>
        <servlet-class>com.maiyeuem.tdsports.controller.filter.SearchServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SearchServlet</servlet-name>
        <url-pattern>/search</url-pattern>
    </servlet-mapping>
    <!-- ENd user -->

    <!--Account Start -->
    <servlet>
        <servlet-name>HomeUserServlet</servlet-name>
        <servlet-class>com.maiyeuem.tdsports.controller.HomeUserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HomeUserServlet</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>com.maiyeuem.tdsports.controller.account.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.maiyeuem.tdsports.controller.account.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>LogOutServlet</servlet-name>
        <servlet-class>com.maiyeuem.tdsports.controller.account.LogOutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogOutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <!--Account Start -->
</web-app>